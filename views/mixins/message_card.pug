mixin message_card(message)
    div(class="message_card container bg-[#F3F3F3] border-2 rounded-lg px-4 py-2 mt-3 mx-auto w-[90%] border-lime-500 md:w-3/6")
        div(class="title-container flex justify-between items-center")
            h2(class="uppercase text-2xl pb-2 text-[#2C4507]") #{message.title}
            if user !== undefined
                if message.author._id.toString() === user._id.toString()
                    a(class="delete-button bg-red-500 px-2 py-0.5 text-white" href=message.url + '/delete') Delete
        div(class="text-container")
            p(class="text text-sm text-slate-600") #{message.text}
        div(class="horizontal-line w-100 border border-grey my-3")
        div(class="more-info-container flex list-none justify-between")
            if user === undefined || user.member === false
                li posted by: XXX
                li XXX
            else 
                li posted by: #{message.author.username}
                    if message.author.admin 
                        p(class="text-red-400") admin
                li #{message.message_date}