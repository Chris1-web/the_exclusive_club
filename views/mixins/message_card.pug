mixin message_card(message)
    div(class="message_card container w-3/5 mx-auto mt-2 px-4 py-2 bg-[#F3F3F3]")
        div(class="title-container")
            h2(class="uppercase text-2xl pb-2") #{message.title}
        div(class="text-container")
            p(class="text text-sm") #{message.text}
        div(class="horizontal-line w-100 border border-grey my-3")
        div(class="more-info-container flex list-none justify-between")
            if user === undefined || user.member === false
                li XXX
                li XXX
            else 
                li #{message.author.username} 
                li #{message.message_date}