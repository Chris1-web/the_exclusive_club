extends layout 

block content 
    form(method="post" class="sign-up-form bg-white flex flex-col justify-between gap-3 container mx-auto max-w-md px-5 py-10 mt-10 w-[90%] text-base border rounded-xl md:h-[70%] md:w-1/2")
        p(class="form-title font-bold text-2xl") Create Message
        div(class="first-name-container flex flex-col")
            label(for="title" class="text-gray-500 text-xl md:text-base") Title 
            input(type="text" id="title" name="title" class="border outline-none py-1 px-2 rounded-lg" required)
        div(class="text-container flex flex-col")
            label(for="text" class="text-gray-500 text-xl md:text-base") Text 
            textarea(name="text", cols="30", rows="10" id="text" class="border outline-none py-1 px-2 rounded-lg" required) 
            if errors
                ul 
                each error in errors 
                    li(class="text-red-500 pt-1") #{error.msg}
        button(class="px-2 py-2 bg-lime-500 text-black text-base border rounded-xl border-none") Create Message