doctype html
html 
    head 
        link(rel="stylesheet" href="/output.css")
        title= title
    body 
        nav(class="text-center mt-4 flex justify-between container shadow-2xl px-2 md:mx-auto") 
            div(class="top-nav flex items-center justify-center pb-4")
                a(href="/")
                    p(class="text-2xl md:text-3xl") Exclusive.
            div(class="middle-nav flex justify-center items-center gap-2 text-base pb-2") 
                if !user
                    a(href="/login" class="px-2 py-3") Log in
                    a(href="/sign-up" class="bg-black text-white px-3 py-2 rounded-xl") Sign Up
                else 
                    ul(class="flex gap-2 list-none md:text-xl") 
                        li(class="text-lime-500") HELLO, #{user.username}
                        li 
                            a(href="/new-message" class="underline md:text-xl") New Message 
                        if !user.member 
                            li 
                                a(href="/membership" class="underline md:text-xl") Be a Member 
                        if !user.admin
                            li 
                                a(href="/admin" class="underline md:text-xl") Be an Admin
                        li 
                            a(href="/logout" class="text-red-400 self-center md:text-xl") logout
        div(class="bg-[#BFC2CD] h-full py-3")
            if !user
                div(class="bottom-nav text-base text-light-black")
                    p(class="text-center pt-2") To post a message, Please create an account and become a member 
            block content