extends layout 

block content 
    form(method="post", action="" class="sign-in-form bg-[#D9D9D9] flex flex-col gap-5 container mx-auto max-w-md px-7 py-5 mt-10 w-1/2 text-base")
        p(class="form-title text-center underline text-lg opacity-50") Sign In
        div(class="username-container flex flex-col")
            label(for="username") Username 
            input(class="border outline-none p-1" type="text" name="username" id="username" )
        div(class="password-container flex flex-col")
            label(for="password") Password 
            input(class="border outline-none p-1" type="password" name="password" id="password")
            if errors
                ul 
                each error in errors 
                    li(class="text-red-500 pt-2") #{error.msg}
        div(class="button-container")
            button Login 
